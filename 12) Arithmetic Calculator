#!/bin/bash

echo "Enter your choice:"
echo "1) Addition"
echo "2) Subtraction"
echo "3) Multiplication"
echo "4) Division"
echo "5) Modulus"
read choice

echo "Enter two integer values:"
read a
read b

case $choice in
    1)
        result=$((a + b))
        echo "Result: $a + $b = $result"
        ;;
    2)
        result=$((a - b))
        echo "Result: $a - $b = $result"
        ;;
    3)
        result=$((a * b))
        echo "Result: $a * $b = $result"
        ;;
    4)
        if [ "$b" -ne 0 ]; then
            result=$((a / b))
            echo "Result: $a / $b = $result"
        else
            echo "Error: Division by zero is not allowed."
        fi
        ;;
    5)
        if [ "$b" -ne 0 ]; then
            result=$((a % b))
            echo "Result: $a % $b = $result"
        else
            echo "Error: Modulus by zero is not allowed."
        fi
        ;;
    *)
        echo "Invalid choice."
        ;;
esac

